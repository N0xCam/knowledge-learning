<h1><%= cursus.title %></h1>
<p>Thème : <%= cursus.theme.title %></p>
<p>Prix du cursus complet : <%= cursus.price %> €</p>

<% if (!hasPurchasedCursus) { %>
  <form action="/purchase/cursus/<%= cursus._id %>" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit">Acheter le cursus 💳</button>
  </form>
<% } else { %>
  <p>✅ Cursus acheté</p>
<% } %>

<hr>
<h2>Leçons :</h2>
<ul>
  <% lessons.forEach(lesson => { %>
    <li><%= lesson.title %> — <%= lesson.price %> €</li>
  <% }) %>
</ul>

<a href="/client/themes">← Retour aux thèmes</a>
